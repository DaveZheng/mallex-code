{
  "name": "mallex-code",
  "version": "0.1.0",
  "description": "Translation proxy that lets Claude Code run against local MLX models on Apple Silicon",
  "type": "module",
  "bin": {
    "mallex": "./dist/index.js",
    "mallex-proxy": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --test dist/**/*.test.js",
    "test:e2e": "MLX_E2E=1 node --test dist/e2e.test.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.0.0"
  }
}
